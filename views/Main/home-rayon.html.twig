{% extends "layout:base.html.twig" %}

{% block main %}
  {#
    CAROUSEL (STATIQUE)
    Pour changer le contenu du carousel,
    modifier le code ci-dessous
  #}

<div id="HomeCarousel" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#HomeCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#HomeCarousel" data-slide-to="1"></li>
    <li data-target="#HomeCarousel" data-slide-to="2"></li>
  </ol>

  <div class="carousel-inner">
    <div class="carousel-item active">
      <a href="https://fete.humanite.fr/" target="_blank" rel="noopener noreferrer">
        <img class="d-block w-100" src="https://alterlibris.fr/media/carousel/carrousel-banniere-fete-huma-2025.jpg" alt="Bannière 1"/>
      </a>
    </div>

    <div class="carousel-item">
      <a href="https://alterlibris.fr/contact/" target="_blank" rel="noopener noreferrer">
        <img class="d-block w-100" src="https://alterlibris.fr/media/carousel/banniere-benevoles-carrousel.jpg" alt="Bannière 2"/>
      </a>
    </div>

    <div class="carousel-item">
      <a href="https://alterlibris.fr/editeur/yovana" target="_blank" rel="noopener noreferrer">
        <img class="d-block w-100" src="https://alterlibris.fr/media/carousel/banniere-web-yovana-2.jpg" alt="Bannière 3"/>
      </a>
    </div>
  </div>

  <a class="carousel-control-prev" href="#HomeCarousel" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#HomeCarousel" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

  <div class="home-cols">

    <div class="home-left-col">

      {#
        BLOC NOUVEAUTÉS (DYNAMIQUE)
        Ce bloc affiche automatiquement les livres du rayon "Page d'accueil"
      #}

      <div class="home-articles">
        <header class="header">
          <h1 class="home-section-title home-articles-title">Nouveautés</h1>
        </header>
        <div class="article-list">
          {% for article in articles %}
            <div class="article-in-list">
              <div class="article-cover">
                {% if article.model|hasImage %}
                  {% include "AppBundle:Article:_cover.html.twig" with {
                    article: article.model,
                    class: "article-cover-image",
                    link: path("article_show", { slug: article.url }),
                    width: 600
                  } %}
                {% else %}
                  <a href="{{ path('article_show', { slug: article.url }) }}">
                    <div aria-label="{{ article.title }}" class="article-missing-cover"></div>
                  </a>
                {% endif %}
              </div>
              <p class="article-title">
                <a class="article-title-link" href="{{ path('article_show', { slug: article.url }) }}">
                  {{ article.title }}
                </a>
              </p>
              <p class="article-publisher">
                {{ article.publisher }}
              </p>
              {% if article.has('price') %}
                <p class="article-price">{{ article.price|currency('EUR')|raw }}</p>
              {% endif %}
              <div class="article-button">
                {{ article.cartButton('Ajouter au panier')|raw }}
              </div>
              {% if article.has('catchline') %}
                <div class="article-catchline">{{ article.catchline|raw }}</div>
              {% endif %}
            </div>
          {% endfor %}
        </div>

        {% include 'AppBundle:Article:_list_pagination.html.twig' %}

      </div>
      
    </div>
    <div class="home-right-col">
      <div class="home-headings-section">
        <article class="home-heading">
          <h1 class="home-section-title">Actualités</h1>
          <a href="https://alterlibris.fr/a/collectif/mes-premiers-chants-de-revolte" target="_blank" rel="noopener noreferrer">
              <img src="/media/rubriques/nouveaute-mes-premiers-chants-de-revolte-290500px.png" class="home-heading-image" alt="Actualités" />
          </a>
        </article>

        <article class="home-heading">
          <h1 class="home-section-title">Coups de cœur</h1>
          <a href="/blog/tirons-la-langue-par-lysiane">
            <img src="/media/rubriques/bloc-site-290px-02-coupdecoeur-tironslalangue.jpg" class="home-heading-image" alt="Rubrique 2" />
          </a>
        </article>

        <article class="home-heading">

        <h1 class="home-section-title">Suivez-nous sur Facebook</h1>
        <div
          class="fb-page"
          data-href="https://www.facebook.com/AlterLibris"
          data-tabs="timeline"
          data-width="290"
          data-height=""
          data-small-header="false"
          data-adapt-container-width="true"
          data-hide-cover="false"
          data-show-facepile="true"
        >
          <blockquote cite="https://www.facebook.com/AlterLibris/" class="fb-xfbml-parse-ignore">
            <a href="https://www.facebook.com/AlterLibris/">AlterLibris, tous les livres des assos</a>
          </blockquote>
        </div>
      </div>
    </div>
  </div>
  <article class="home-heading" style="width: unset !important;">
    <h1 class="home-section-title">L'actu des assos</h1>
    <a href="https://alterlibris.fr/a/collectif/j-etais-la" target="_blank" rel="noopener noreferrer">
      <img src="/media/rubriques/banniere-1000px-03-facescacheesj-etaisla-alterlibris.jpg" class="home-heading-image" alt="Rubrique 3" />
    </a>
  </article>
{% endblock %}
